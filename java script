function createListingCards() {
    const listingsGrid = document.querySelector('.listings-grid');
    
    featuredListings.forEach(listing => {
        const card = document.createElement('div');
        card.className = 'listing-card';
        card.innerHTML = `
            <img src="${listing.image}" alt="${listing.title}">
            <div class="listing-info">
                <div class="listing-rating">
                    <span>‚≠ê ${listing.rating} (${listing.reviews})</span>
                </div>
                <h3>${listing.title}</h3>
                <p>${listing.description}</p>
                <p class="listing-details">${listing.details}</p>
            </div>
        `;
        listingsGrid.appendChild(card);
    });
}

function createPropertyCards() {
    const propertyGrid = document.querySelector('.property-grid');
    
    propertyTypes.forEach(property => {
        const card = document.createElement('div');
        card.className = 'property-card';
        card.innerHTML = `
            <img src="${property.image}" alt="${property.type}">
            <div class="property-info">
                <h3>${property.type}</h3>
                <p>${property.description}</p>
            </div>
        `;
        propertyGrid.appendChild(card);
    });
}

function createDestinationLinks() {
    const destinationsGrid = document.querySelector('.destinations-grid');
    
    nearbyDestinations.forEach(destination => {
        const link = document.createElement('a');
        link.className = 'destination-link';
        link.href = '#';
        link.innerHTML = `
            <h3>${destination.name}</h3>
            <p>${destination.type}</p>
        `;
        destinationsGrid.appendChild(link);
    });
}

document.addEventListener('DOMContentLoaded', () => {
    createListingCards();
    createPropertyCards();
    createDestinationLinks();
});
